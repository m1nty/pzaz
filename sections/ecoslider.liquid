<section class="dslider"> 
  <div class="dsliderBody">
  	{% for block in section.blocks %}
    	
      <a href="{{block.settings.url}}" target="_blank" class="dsliderBodyItem">
        <div class="dsliderBodyItemWr">
          <img src="{{block.settings.image | img_url:'master' }}" />
        </div>
      </a>
    	
    {% endfor %}
  </div>
	
</section>

<style>
  .dslider{
  	padding: 6vh 0;
  }
  .dsliderBodyItem{
  	width: 310px;
    height: 310px!important;
    border-radius: 30px 30px 38px 38px;
    border: #000000 7px solid;
    -webkit-filter: drop-shadow(0 5px 0 #000000);
    filter: drop-shadow(0 5px 0 #000000);
    margin: 0 3vh;
    padding-bottom: 5px;
    outline: none!important;
    background: #000;
  }
  .dsliderBodyItemWr{
  	overflow:hidden;
    position:relative;
        width: 100%;
    height: 100%;
    display: block;
    border-radius: 29px;
  }
  .dsliderBodyItem img{
    border-radius: 30px;
    min-width: 100%;
    height: 100%;
    width: auto;
    max-width: none;
    position: absolute;
    left: 50%;
    top: 50%;
    display:block;
    margin-top: 1px;
    transform: translate(-50%, -50%);
  }
  .dslider .slick-list{
  	padding-bottom: 20px!important;
  }
  @media(max-width: 500px){
    .dsliderBodyItem{
      width: 260px;
      height: 250px!important;
    }
  }
  .dslider [data-widget-style=slider] .slick-next, [data-widget-style=slider] .slick-prev{
  	overflow:visible;
    height: 40px;
  }
  .dslider [data-widget-style=slider] .slick-next:before, [data-widget-style=slider] .slick-prev:before{
  	display:block;
    z-index: 8;
  }
</style>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
  $('.dsliderBody').slick({
  	infinite: true,
    slidesToShow: 1,
    centerMode: true,
    variableWidth: true,
    autoplay: true,
    autoplaySpeed: 0,
    speed: 4500,
    cssEase: "linear",
    waitForAnimate : false, 
    pauseOnFocus : false, 
    pauseOnHover : false, 
    swipe : false,
    arrows:false,
  })
</script>

