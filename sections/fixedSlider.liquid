  {
    "name": "Fixed slider",
    "settings": [],
	"blocks": [
      {
        "type": "Item",
        "name": "Item",
        "settings": [
			{
              "type": "image_picker",
              "id": "logo",
              "label": "Logo"
            }
        ]
      }
	]
  }
{% endschema %}

