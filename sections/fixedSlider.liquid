<div class="fixedSlider">
  <div class="fixedSliderBody">
  	{% for block in section.blocks %}
      <div class="fixedSliderBodyImg">
    	<img src="{{block.settings.logo | img_url:'master'}}" />
      </div>
    {% endfor %}
  </div>
	asdasdasd
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
  $('.fixedSliderBody').slick({
  	infinite: true,
    slidesToShow: 2,
    variableWidth: true,
    autoplay: true,
    autoplaySpeed: 0,
    speed: 7000,
    cssEase: "linear",
    waitForAnimate : false, 
    pauseOnFocus : false, 
    pauseOnHover : false, 
    swipe : false,
    arrows:false,
  })
</script>

<style>
  main{
  	position:relative;
  }
  #shopify-section-fixedSlider{
  	position:absolute;
    width: 100%;
    height: 60px;
    left: 0;
    bottom: 0;
    background: #FFFF00;
    padding: 5px 0;
    box-sizing: border-box;
  }
  .fixedSliderBodyImg img{
  	display:block;
    height: 50px;
  }
  .fixedSliderBodyImg{
  	margin: 0 10px;
  }
</style>

